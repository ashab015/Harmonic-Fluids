IF (APPLE)
    FIND_LIBRARY(CBLAS_LIBRARY vecLib DOC "CBLAS lib for OSX")
    FIND_PATH(CBLAS_INCLUDE_DIR vecLib/cblas.h DOC "Include for CBLAS on OSX")
ENDIF(APPLE)

IF (CBLAS_INCLUDE_DIR AND CBLAS_LIBRARY)
    IF (NOT CBLAS_FIND_QUIETLY)
        MESSAGE(STATUS "Found CBLAS: ${CBLAS_LIBRARY}")
    ENDIF (NOT CBLAS_FIND_QUIETLY)
ELSEIF (CBLAS_INCLUDE_DIR AND CBLAS_LIBRARY) 
    IF (CBLAS_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Cannot find CBLAS")
    ENDIF (CBLAS_FIND_REQUIRED)
ENDIF (CBLAS_INCLUDE_DIR AND CBLAS_LIBRARY)
